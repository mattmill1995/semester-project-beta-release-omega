<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/black"
    >
    <TextView
        android:id="@+id/team_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textColor="@android:color/holo_orange_dark"
        android:text="Team x Won"
        android:textSize="50dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/team_1_score_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_toLeftOf="@id/team_won"
        android:textColor="@android:color/holo_orange_dark"
        android:text="0"
        android:textSize="50dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/team_2_score_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/team_won"
        android:textColor="@android:color/holo_orange_dark"
        android:text="0"
        android:textSize="50dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/new_game_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:text="New Game"/>

    <Button
        android:id="@+id/main_menu_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/new_game_btn"
        android:layout_centerVertical="true"
        android:text="Main Menu"/>

    <Button
        android:id="@+id/replay_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/new_game_btn"
        android:layout_centerVertical="true"
        android:text="Play Again"/>

</RelativeLayout>