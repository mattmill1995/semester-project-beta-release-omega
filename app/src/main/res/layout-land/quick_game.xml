<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
    >

    <Button
        android:id="@+id/team_1_score_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="+1"/>

    <Button
        android:id="@+id/team_2_score_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text="+1"/>


    <Button
        android:id="@+id/undo_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Undo Score"/>

    <TextView
        android:id="@+id/team_1_score_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="50dp"
        android:layout_toRightOf="@id/team_1_score_button"
        android:textColor="@android:color/holo_orange_dark"/>



    <TextView
        android:id="@+id/team_2_score_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="50dp"
        android:layout_toLeftOf="@id/team_2_score_button"
        android:textColor="@android:color/holo_orange_dark"/>




    <Button
        android:id="@+id/set_score_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:text="Set Score"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_above="@id/set_score_button"
        android:text="Reset"/>



    <Button
        android:id="@+id/set_clock_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_above="@id/undo_button"
        android:layout_alignParentRight="true"
        android:text="Set Clock"/>

    <Button
        android:id="@+id/main_menu_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_above="@id/set_clock_button"
        android:layout_alignParentRight="true"
        android:text="Main Menu"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/team_1_score_view"
        android:layout_toLeftOf="@id/team_2_score_view"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="center"
        android:textSize="65dp"/>
</RelativeLayout>